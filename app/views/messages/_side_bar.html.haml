.side-bar

  .user-name
    .top-item
      .item-name 
        =current_user.name

      .item-icons 
        = link_to new_group_path do
          =fa_icon 'edit', class: "item-icons"
        =link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: "item-icons"
           
  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
